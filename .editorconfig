root = true

[*.{js,jsx,ts,tsx,less,php,html,twig,json,xml,yaml,yml,sh}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
quote_type = single

[*.less]
max_line_length = 160

[*.{yaml,yml,conf,md}]
indent_size = 2
insert_final_newline = true

[{*file,.*ignore,.*rc}]
insert_final_newline = true


